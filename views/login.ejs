}

#google>div>span {
    font-size: 14px;
    letter-spacing: .28px;
    color: #525252;
    margin-left: 8px;
}

#bottom {
    position: absolute;
    bottom: 0;
    text-align: center;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
}

#bottom>p {
    padding-top: 14px;
    border-top: 1px solid #c6c6c6;
    font-size: 12px;
    text-align: center;
    color: #666;
    line-height: 16px;
    display: inline-block;
    width: 100%;
    position: relative;
    content: "";
    margin-top: 24px;
    margin-bottom: 12px;
}

#bottom>p>a {
    color: #0043ce;
    font-size: 12px;
    text-decoration: underline;
    cursor: pointer;
    background-color: transparent;
}
    </style>
</head>
